/public/packs
/public/packs-test
/public/assets
/public/uploads

# Development storage
/storage/*
!/storage/.keep

# Ruby/Rails specific
.bundle
/vendor/bundle
.rvmrc
.powenv
config/initializers/secret_token.rb
config/master.key
# config/secrets.yml  # Uncomment if you have production secrets in this file

# Environment variables
.env
.env*.local
.env*

# Test and coverage
/coverage/
/spec/tmp

# Node and JavaScript
node_modules/
/vendor/assets/bower_components
bower.json

